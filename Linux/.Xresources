! Hack font with support for powerline
URxvt.font:           xft:Hack:style=Regular:size=10
URxvt.boldFont:       xft:Hack:style=Bold:size=10
URxvt.italicFont:     xft:Hack:style=Italic:size=10
URxvt.bolditalicFont: xft:Hack:style=BoldItalic:size=10

! Bitmap tewi font
!URxvt*font: -*-tewi-medium-r-*-*-11-*-*-*-*-*-*-*
!URxvt*boldFont: -*-tewi-medium-r-*-*-11-*-*-*-*-*-*-*
!URxvt*italicFont: -*-tewi-medium-r-*-*-11-*-*-*-*-*-*-*
!URxvt*bolditalicFont: -*-tewi-medium-r-*-*-11-*-*-*-*-*-*-*

! Urxvt settings
URxvt.scrollBar: false
URxvt.secondaryScreen: 1
URxvt.secondaryScroll: 0
URxvt.urgentOnBell:false
Urxvt.visualBell: true
URxvt.depth: 32
URxvt.background: rgba:0000/0000/0200/c800
URxvt.perl-ext-common: default,matcher,resize-font

! Cursor Settings
URxvt.cursorBlink: 1
URxvt.cursorUnderline: 1

! Clickable url
URxvt.url-launcher: /usr/bin/xdg-open
URxvt.matcher.button: 1

! Disable ctrl+shift picutre/mode binding
URxvt.iso14755: false
URxvt.iso14755_52: false

rofi.hide-scrollbar: true

! hard contrast: *background: #1d2021
*background: #282828
! soft contrast: *background: #32302f
*foreground: #ebdbb2
! Black + DarkGrey
*color0:  #282828
*color8:  #928374
! DarkRed + Red
*color1:  #cc241d
*color9:  #fb4934
! DarkGreen + Green
*color2:  #98971a
*color10: #b8bb26
! DarkYellow + Yellow
*color3:  #d79921
*color11: #fabd2f
! DarkBlue + Blue
*color4:  #458588
*color12: #83a598
! DarkMagenta + Magenta
*color5:  #b16286
*color13: #d3869b
! DarkCyan + Cyan
*color6:  #689d6a
*color14: #8ec07c
! LightGrey + White
*color7:  #a89984
*color15: #ebdbb2
